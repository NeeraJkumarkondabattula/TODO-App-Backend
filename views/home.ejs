                    <button type="button" style="background-color: #ee351e;color: white;border: none;outline:none"
                        id="delete-button" value="DELETE TASK"><i class="fa-regular fa-trash-can"></i> &nbsp;DELETE
                        TASKS</button></label>
                </div>
        </div>
        </form><br>

        <form action="/delete-task" method="GET">
            <button type="submit" id="delet" value="DELETE TASK"></button>
            <% for(let i of tasks_list) { %>
                <hr>
                <div id="task-div">
                    <div id="task">
                        <input type="checkbox" name="<%= i._id %>">
                        <p id="dis">
                            <%=i.task%>
                        </p>
                    </div>
                    <div id="cato" class="Cato">
                        <%= i.category%>
                    </div>
                    <div id="date"><i class="fa-regular fa-calendar-days"></i>&nbsp;<%=i.date%>
                    </div>
                </div>
                <% } %>
        </form>


    </div>
    </div>

