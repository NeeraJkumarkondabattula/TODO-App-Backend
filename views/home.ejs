                            <option value="Personal" checked="">Personal</option>
                            <option value="School" checked="">School</option>
                            <option value="Work" checked="">Work</option>
                            <option value="Cleaning" checked="">Cleaning</option>
                            <option value="Others" checked="" selected>Others</option>
                        </select>
                    </div>
                    <div id="dates">
